<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/setup"
        motion:duration="700"
        motion:motionInterpolator="overshoot"
        motion:autoTransition="animateToEnd">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="overshoot"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/loading_end"
        motion:constraintSetStart="@id/end"
        motion:duration="1000"
        motion:motionInterpolator="overshoot"
        motion:autoTransition="animateToEnd">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/change_background"
        motion:constraintSetStart="@id/loading_end"
        motion:duration="1000"
        motion:motionInterpolator="overshoot"
        motion:autoTransition="animateToEnd">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/show_logo"
        motion:constraintSetStart="@id/change_background"
        motion:duration="1000"
        motion:motionInterpolator="overshoot"
        motion:autoTransition="animateToEnd">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet
        android:id="@+id/setup"
        motion:deriveConstraintsFrom="@+id/start">
        <Constraint
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/white"
                />
        </Constraint>
        <Constraint
            android:id="@+id/first_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/second_dot"
            />
        <Constraint
            android:id="@+id/second_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toEndOf="@id/second_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/white"
                />
        </Constraint>
        <Constraint
            android:id="@+id/first_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/second_dot"
            />
        <Constraint
            android:id="@+id/second_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toEndOf="@id/second_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorValue="@color/white"
                />
        </Constraint>
        <Constraint
            android:id="@+id/first_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
        <Constraint
            android:id="@+id/second_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/first_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toEndOf="@id/first_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/loading_end"
        >
        <Constraint
            android:id="@+id/first_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="@id/third_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
        <Constraint
            android:id="@+id/second_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/third_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/change_background">
        <Constraint
            android:id="@+id/first_dot"
            android:layout_width="1500dp"
            android:layout_height="1500dp"
            motion:layout_constraintStart_toEndOf="@id/third_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/second_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/third_dot"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/show_logo"
        motion:deriveConstraintsFrom="@+id/change_background">
        <Constraint
            android:id="@+id/welcome_logo"
            android:alpha="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
    </ConstraintSet>


</MotionScene>